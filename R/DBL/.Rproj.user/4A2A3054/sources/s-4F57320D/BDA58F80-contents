library(plotly)

map.plotly <- plot_ly(data = map.data, 
                      x = ~MappedFixationPointX, 
                      y = ~MappedFixationPointY,
                      type = 'scatter',
                      mode = 'markers',
                      size = ~FixationDuration,
                      frame = ~user.index
                      
)

map.plotly <- map.plotly %>% layout(
  yaxis = list(range = c(dim_img[1], 50)),
  xaxis = list(range = c(50, dim_img[2]))
  
  )

map.plotly
